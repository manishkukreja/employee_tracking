<h1>Listing attendences</h1>

<table>
  <thead>
    <tr>
      <th>User Name</th>
      <th>Time in</th>
      <th>Time out</th>
      <th>Total Time (Hr)</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendences.each do |attendence| %>
      <tr>
        <td><%= attendence.user.username %></td>
        <td><%= attendence.time_in %></td>
        <td><%= attendence.time_out %></td>
        <td><%= ((attendence.time_out - attendence.time_in) / 3600 ).to_i%></td>
        <td><%= link_to 'Show', attendence %></td>
        <td><%= link_to 'Edit', edit_attendence_path(attendence) %></td>
        <td><%= link_to 'Destroy', attendence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendence', new_attendence_path %>
